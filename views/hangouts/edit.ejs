<% layout('layouts/boilerplate') %>

    <div class="row">

        <div class="col-md-6 offset-md-3 ">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center">Edit Hangout</h2>
                    <form action="/hangouts/<%=hangout._id%>?_method=PUT" method="post" novalidate
                        class="validated-form" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label class="label-form" for="name"> Name</label>
                            <input class="form-control" type="text" id="name" name="hangout[name]"
                                value="<%=hangout.name %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="label-form" for="name"> Location</label>
                            <input class="form-control" type="text" id="location" name="hangout[location]"
                                value="<%=hangout.location%>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="label-form" for="daysOpen"> Days/Time Open</label>
                            <input class="form-control" name="hangout[daysOpen]" id="daysOpen"
                                value="<%=hangout.daysOpen%>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="label-form" for="description"> Description</label>
                            <textarea class="form-control" name="hangout[description]" id="description" cols="30"
                                rows="5" required><%=hangout.description%></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-file custom-file">
                                <input type="file" name="image" id="image" class="form-file-input" multiple>
                                <label class="form-file-label" for="image">
                                    <span class="form-file-text custom-file-label">Add more image(s)...</span>
                                    <span class="form-file-button">Browse</span>
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <%hangout.images.forEach((img, i)=> {%>
                                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                                <div class="form-check-inline">
                                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                        value="<%=img.filename %>">
                                    <label for="image-<%=i%>">delete?</label>
                                </div>
                                <% }); %>
                        </div>


                        <div class="mb-3">
                            <button class="btn btn-success">Update Hangout</button>
                        </div>

                    </form>
                </div>
            </div>
            <br>
            <form action="/hangouts/<%=hangout._id %>">
                <button class="btn btn-small btn-info">Back</button>
            </form>


        </div>
    </div>