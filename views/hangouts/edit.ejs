<% layout('layouts/boilerplate') %>

    <div class="row">
        <h2 class="text-center">Edit Hangout</h2>
        <div class="col-6 offset-3">
            <form action="/hangouts/<%=hangout._id%>?_method=PUT" method="post" novalidate class="validated-form"
                enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="label-form" for="name"> Name</label>
                    <input class="form-control" type="text" id="name" name="hangout[name]" value="<%=hangout.name %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="label-form" for="name"> Location</label>
                    <input class="form-control" type="text" id="location" name="hangout[location]"
                        value="<%=hangout.location%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="label-form" for="daysOpen"> Days/Time Open</label>
                    <input class="form-control" name="hangout[daysOpen]" id="daysOpen" value="<%=hangout.daysOpen%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="label-form" for="description"> Description</label>
                    <textarea class="form-control" name="hangout[description]" id="description" cols="30" rows="5"
                        required><%=hangout.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" name="image" id="image" class="form-file-input" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Add more image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <%hangout.images.forEach((img, i)=> {%>
                        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename %>">
                            <label for="image-<%=i%>">delete?</label>
                        </div>
                        <% }); %>
                </div>


                <div class="mb-3">
                    <button class="btn btn-success">Update Hangout</button>
                </div>

            </form>
            <br>
            <a href="/hangouts/<%=hangout._id %>">Back</a>

        </div>
    </div>